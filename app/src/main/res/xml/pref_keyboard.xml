<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Key Press Actions">

        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="Vibrate"
            android:entries="@array/entries_yesno"
            android:entryValues="@array/entryvalues_yesno"
            android:key="vibrate"
            android:summary="Vibrate on key press"
            android:title="Vibrate" />

        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Sound"
            android:entries="@array/entries_yesno"
            android:entryValues="@array/entryvalues_yesno"
            android:key="keyclick"
            android:summary="Play a click on key press"
            android:title="Sound" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Keyboard Size Portrait">

        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="Portrait Keyboard"
            android:entries="@array/entries_keyboard_size"
            android:entryValues="@array/entryvalues_keyboard_size"
            android:key="keyboard-port-size"
            android:summary="Full or mini keyboard in portrait mode"
            android:title="Keyboard portrait type" />

        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="Portrait Height"
            android:entries="@array/entries_keyboard_keyheight"
            android:entryValues="@array/entryvalues_keyboard_keyheight"
            android:key="keyboard-port-keyheight"
            android:summary="The height of the keyboard in portrait mode"
            android:title="Keyboard portrait height" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Keyboard Size Landscape">

        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="Landscape Keyboard"
            android:entries="@array/entries_keyboard_size"
            android:entryValues="@array/entryvalues_keyboard_size"
            android:key="keyboard-land-size"
            android:summary="Full or mini keyboard in landscape mode"
            android:title="Keyboard landscape type" />

        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="Landscape Height"
            android:entries="@array/entries_keyboard_keyheight"
            android:entryValues="@array/entryvalues_keyboard_keyheight"
            android:key="keyboard-land-keyheight"
            android:summary="The height of the keyboard in landscape mode"
            android:title="Keyboard landscape height" />

    </PreferenceCategory>

</PreferenceScreen>
